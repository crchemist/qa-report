{
  "name": "qa-report",
  "version": "0.1",
  "devtools_page": "devtools.html",
  "browser_action": {
      "default_title": "Show the popup",
      "default_popup": "popup.html",
      "default_icon": {
        "19": "icon19.png",
        "38": "icon38.png"
      }

  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
  },
 "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["qa_report.js", "content.js", "bootstrap.js"],
      "css": ["bootstrap.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["qa_report.js", "background.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}

